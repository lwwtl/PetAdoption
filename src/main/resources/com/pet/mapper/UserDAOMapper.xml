    <!--根据Name模糊查找-->
    <select id="findByName" parameterType="String" resultType="User">
         select * from t_user where userName like #{userName}
    </select>
<!--    根据id查找-->
    <select id="findByAccount" parameterType="String" resultType="User">
         select * from t_user where userAccount=#{Account}
    </select>
    <!--登录,#{传入参数}-->
    <select id="login" resultType="User">
            select userId,userAccount,userPassword,userName,userAge,userSex,userTelephone,userEmail,userAddress,userState from t_user
            where userAccount=#{Account} and userPassword=#{Password}
    </select>

</mapper>